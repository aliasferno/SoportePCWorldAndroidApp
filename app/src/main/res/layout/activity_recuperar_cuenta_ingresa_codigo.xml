        tools:context=".recuperarCuenta"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/recingcod_lblTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
